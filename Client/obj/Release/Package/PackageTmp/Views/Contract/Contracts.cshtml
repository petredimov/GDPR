       //                  .Encoded(false)
       //                  .Sanitized(false)
       //                  .SetWidth(30)
       //       .RenderValueAs(o => Html.ActionLink("Details", "Details", "ContractType", new { id = o.Type.ID }, null));
   }).WithPaging(20).Sortable(true).Selectable(true)
    </div>
</div>

